@page "/categoryoverview"

<h1 class="page-title">All categories</h1>


@if (Categories == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Category ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Categories)
            {
                <tr>
                    <td><img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{category.Id}-small.jpg")" class="rounded-circle" /></td>
                    <td>@category.Id</td>
                    <td>@category.FullName</td>
                    <td>
                        <a href="@($"categorydetail/{category.Id}")" class="btn btn-primary table-btn">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
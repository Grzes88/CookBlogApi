@page "/categorycreate"
@page "/categorycreate/{CategoryId}"

@if (!Saved)
{
    <section class="category-create">
        <h1 class="page-title">Details for @CategoryDto.FullName</h1>
        <EditForm Model="@CategoryDto" OnValidSubmit="@HandleValidSubmit"
              OnInvalidSubmit="@HandleInvalidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary></ValidationSummary>
            <div class="form-group row">
                <label for="title" class="col-sm-3">Title: </label>
                <InputText id="title" class="form-control col-sm-8" @bind-Value="@CategoryDto.FullName" placeholder="Enter title"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => CategoryDto.FullName)" />
            </div>

            <button type="submit" class="btn btn-primary edit-btn">Save post</button>

            <a class="btn btn-outline-primary" @onclick="@NavigateToOverview">Back to overview</a>
        </EditForm>
    </section>
}
else
{
    <div class="alert @StatusClass">@Message</div>
}
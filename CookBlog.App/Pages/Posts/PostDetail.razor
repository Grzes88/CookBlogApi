@page "/postdetail/{PostId}"

<h1 class="page-title">Details for @PostDto.Title</h1>

<div class="col-12 row">
    <div class="col-10 row">
        <div class="col-xs-12 col-sm-8">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Title:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@PostDto.Title</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Description:</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@PostDto.Description</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Category:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@PostDto.Category.FullName</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Tags:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@string.Join(", ", PostDto.Tags.Select(tag => tag.Description))</label>
                </div>
            </div>
        </div>
    </div>
</div>
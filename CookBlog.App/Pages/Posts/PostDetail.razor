@page "/postdetail/{PostId}"

<h1 class="page-title">Details for @PostDto.Title</h1>

<div class="col-12 row">
    <div class="col-10 row">

        <div class="col-xs-12 col-sm-8">

            <MudText Typo="Typo.h3" Label="Title" Class="mt-2">@PostDto.Title </MudText>

            <PostGetImage PostId="@Guid.Parse(PostId)"></PostGetImage>

            <MudText Typo= "Typo.body1" Label="Description" Class="mt-2">@PostDto.Description </MudText>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Category:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@PostDto.Category.FullName</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Tags:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@string.Join(", ", PostDto.Tags.Select(tag => tag.Description))</label>
                </div>
            </div>

        </div>

    </div>
</div>